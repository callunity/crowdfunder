<%= form_for @project  do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :goal %> ($)<br>
    <%= f.text_field :goal %>
  </div>

  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </div>
  
  <h3>Pledge Tiers</h3>
  
  <div id="tiers">
    <%= f.fields_for :tiers do |tier| %>
      <%= render 'tier_fields', :f => tier %>
    <% end %>
  </div>
  
  <div class="links">
      <%= link_to_add_association 'Add Tier', f, :tiers %>
  </div>

  <div class="actions"><%= f.submit %></div>
<% end %>
