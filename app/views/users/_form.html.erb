<%= form_for(@user) do |u|  %>
  <div>
    <%= u.label :first_name %>
    <%= u.text_field :first_name %>
  </div>

  <div>
    <%= u.label :last_name %>
    <%= u.text_field :last_name %>
  </div>

  <div>
    <%= u.label :email %>
    <%= u.text_field :email %>
  </div>

  <div>
    <%= u.label :password %>
    <%= u.password_field :password %>
  </div>

  <div>
    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation %>
  </div>

  <%= u.submit %>
<% end %>